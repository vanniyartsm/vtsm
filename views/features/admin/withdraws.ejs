<% 
var DATE_FORMAT = 'YYYY-MM-DD hh:mm:ss A'
var moment = locals.moment; %>
<div class="utils__content">
    <!-- START: components/mail-templates -->
    <section class="card">
        <div class="card-header">
            <span class="utils__title">
                <strong>All Withdraw Requests</strong>
            </span>
        </div>
        <div class="card-header">
            <div class="pull-right mt-2">
                <span class="mr-3">&nbsp;</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-xl-12">
                   <!-- Left Tables -->
                          <div class="tab-pane show active" id="b1">
                              <div class="cui-ecommerce-dashboard-info">
                                <div class="cui-ecommerce-dashboard-info-block">
                                      <div id="users" class="dataTables_wrapper dt-bootstrap4">
                                          <div class="row">
                                              <div class="col-sm-12">
                                                  <table class="table table-hover nowrap dataTable dtr-inline"
                                                      id="viewTbl" role="grid"
                                                      aria-describedby="view">
                                                      <thead class="thead-default">
                                                          <tr role="row">
                                                              <th>S. No.</th>
                                                              <th>Requested Date</th>
                                                              <th>User Name</th>
                                                              <th>Wallet Name</th>
                                                              <th>Bitcoin Value</th>
                                                              <th>Points</th>
                                                              <th>Address</th>
                                                              <th>Action</th>
                                                          </tr>
                                                      </thead>
                                                      <tbody>
                                                          <% 
                                                          if (withdrawRequests) {
                                                          for(var i=0; i < withdrawRequests.length; i++) {
                                                            var wr = withdrawRequests[i];
                                                            console.info('wr = ', wr);
                                                        %>

                                                          <tr role="row" class="odd">
                                                              <td tabindex="0" class="sorting_1"><%= (i + 1) %></td>
                                                              <td><a href="javascript: void(0);"
                                                                      class="link-underlined"><%= moment(wr.requestedDate).format(DATE_FORMAT) %></a>
                                                              </td>
                                                              <td><a href="javascript: void(0);"
                                                                data-url="/web/admin/user/info/<%= wr.user._id %>"
                                                                data-title="User Info" data-method="GET"
                                                                class="link-underlined side-panel-trigger slide-btn text-success"><%= wr.user.userName %></a>
                                                              </td>
                                                              <td><%= wr.wallet.walletName %></td>
                                                              <td><%= wr.value.value %></td>
                                                              <td><%= wr.points.value %></td>
                                                              <td><%= wr.address %></td>
                                                              <td>
                                                                <button class="btn btn-primary side-panel-trigger slide-btn "
                                                                    data-url="/web/admin/withdraw/approval/<%= wr._id %>"
                                                                    data-title="Withdraw Approval" data-method="GET">Approval</button>
                                                            </td>
                                                          </tr>
                                                          <% } 
                                                        } %>
                                                      </tbody>
                                                  </table>
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                  </div>

                </div>
            </div>
            
            
        </div>
    </section>
   
    </div>